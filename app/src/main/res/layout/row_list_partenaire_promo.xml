<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:id="@+id/background"
        android:focusableInTouchMode="false"
        >


        <com.sharity.sharityUser.Utils.SquareImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imageView"/>

        <TextView android:textColor="#000000"
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="business name"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />


        <TextView
            android:textColor="#000000"
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            tools:text="description"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/item"
            android:layout_alignParentLeft="@+id/item"
            android:layout_alignLeft="@+id/item"
            android:layout_toStartOf="@+id/reduction"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toLeftOf="@+id/reduction" />

        <TextView
            android:textColor="#000000"
            android:id="@+id/item"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            tools:text="item"
            android:layout_below="@+id/nom"
            android:layout_marginRight="15dp"
            android:layout_alignParentLeft="@+id/nom"
            android:layout_alignLeft="@+id/nom"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reduction"
            android:gravity="center"
            tools:text="reduc10â‚¬"
            android:textColor="@color/green"
            android:layout_above="@+id/description"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp" />

        <TextView
            android:id="@+id/prix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="prix"
            android:gravity="center"
            android:visibility="invisible"
            android:textColor="@color/green"
            android:layout_alignBaseline="@+id/nom"
            android:layout_alignBottom="@+id/nom"
            android:layout_toRightOf="@+id/nom"
            android:layout_toEndOf="@+id/nom"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

    </RelativeLayout>
</LinearLayout>