<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/fragment_Historique_list_title"
                android:id="@+id/dons"
                android:textColor="@color/blue"
                android:text="payment from"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dons"
                android:id="@+id/date_dons"
                android:textSize="@dimen/fragment_Historique_list_subtitle"
                android:text="date"
                android:layout_marginTop="5dp"
                android:textColor="@color/blue"
                android:layout_alignLeft="@+id/dons"
                android:layout_alignStart="@+id/dons" />

            <com.sharity.sharityUser.fonts.TextViewGeoManis
                android:text="price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price_dons"
                android:textSize="@dimen/fragment_Historique_list_price"
                android:textColor="#6CBA7C"
                app:GeomanisRegular="geomanistregular.ttf"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="approved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/approved"
                android:textSize="12.5sp"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:layout_below="@+id/price_dons"
                android:layout_alignRight="@+id/price_dons"
                android:visibility="invisible"
                android:layout_alignEnd="@+id/price_dons" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
