<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_top_info"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:layout_alignParentBottom="true"
    android:background="@drawable/border_rose_pro"
    android:weightSum="2.9"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:gravity="bottom"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="bottom|center_horizontal"
            android:textColor="@color/white"
            android:text="SOLDE"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:weightSum="3"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_weight="0.8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                >
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginBottom="4dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:gravity="bottom|center_horizontal|center_vertical"
                    android:id="@+id/generated_sharepoint"
                    android:layout_above="@+id/generatedTV"
                    android:text="480"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sharepoint \n généré"
                    android:textColor="@color/white"
                    android:id="@+id/generatedTV"
                    android:textSize="12sp"
                    android:gravity="center_vertical|center_horizontal"
                    />
                </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:gravity="center_horizontal"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:background="@drawable/border_button"
                    android:textAllCaps="false"
                    android:text="allouer"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:id="@+id/solde_euros"
                    android:layout_gravity="center_horizontal|center_vertical"
                android:text="20e"/>


                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/circularprogress"
                    app:cpb_background_progressbar_color="#FFE7E7E7"
                    app:cpb_background_progressbar_width="3dp"
                    app:cpb_progressbar_color="#FFFFFF"
                    app:cpb_progressbar_width="7dp"
                    android:layout_gravity="center_horizontal|center_vertical"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_weight="0.8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                >
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginBottom="4dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:gravity="bottom|center_horizontal|center_vertical"
                    android:id="@+id/stock_sharepoint"
                    android:layout_above="@+id/stockTV"
                    android:text="480"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="stock de \n sharepoint"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:id="@+id/stockTV"
                    android:gravity="center_vertical|center_horizontal"
                    />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:visibility="invisible"
                android:gravity="center_horizontal"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:background="@drawable/border_button"
                    android:textAllCaps="false"
                    android:text="retirer"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/red"
            android:background="@drawable/border_button"
            android:textAllCaps="false"
            android:text="retirer"/>

    </RelativeLayout>
</LinearLayout>